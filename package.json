{
  "name": "wow-ah-revamp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "scripts": {
    "installgraphql": "npm i --prefix=backend/api/",
    "installreact": "npm i --prefix=frontend/react/",
    "installAll": "npm run installgraphql && npm run installreact",

    "graphql": "nodemon backend/api/src/index.js",
    "mongo": "mongod --dbpath=db",
    "react": "npm start --prefix frontend/react",
    "wingraphql": "nodemon backend\\api\\src\\index.js",
    "winmongo": "mongod --dbpath=db",
    "winreact": "npm start --prefix frontend\\react",

    "dev": "concurrently --kill-others \"npm run graphql\" \"npm run mongo\" \"npm run react\"",
    "windev": "concurrently --kill-others \"npm run wingraphql\" \"npm run winmongo\" \"npm run winreact\"",

    "idev": "npm run installAll && npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscheller1/wow-ah-revamp.git"
  },
